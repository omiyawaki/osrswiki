<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.omiyawaki.osrswiki.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_pageFragment"
            app:destination="@id/pageFragment" />
    </fragment>

    <fragment
        android:id="@+id/pageFragment"
        android:name="com.omiyawaki.osrswiki.page.PageFragment"
        android:label="Page"
        tools:layout="@layout/fragment_page">
        <argument
            android:name="pageId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="pageTitle"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_pageFragment_self"
            app:destination="@id/pageFragment" />
    </fragment>

</navigation>
